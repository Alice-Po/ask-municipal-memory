---
import {
  BASE,
  MANUAL_DARK_MODE,
  SITE_FAVICON,
  SITE_NAME,
  SITE_TITLE,
  SHOW_FAVICON_IN_HEADER,
} from "../config.ts";
import Navbar from "./Navbar.svelte";
import ThemeToggle from "./ThemeToggle.astro";
import CodeCopyButton from "./CodeCopyButton.astro";

const { active } = Astro.props;
---

<Navbar 
  client:load 
  active={active} 
  base={BASE}
  siteName={SITE_NAME || SITE_TITLE}
  showFavicon={SHOW_FAVICON_IN_HEADER}
  siteFavicon={SITE_FAVICON}
  manualDarkMode={MANUAL_DARK_MODE}
>
  <ThemeToggle slot="theme-toggle" />
</Navbar>

<CodeCopyButton />
